<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FirstMenu" >

    <Button
        android:id="@+id/mouseb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="68dp"
        android:onClick="onClick"
        android:text="mouse" />

    <Button
        android:id="@+id/keyboardb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mouseb"
        android:layout_alignLeft="@+id/mouseb"
        android:layout_marginBottom="63dp"
        android:onClick="onClick"
        android:text="keyboard" />

    <Button
        android:id="@+id/gyromouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/keyboardb"
        android:layout_below="@+id/mouseb"
        android:onClick="onClick"
        android:text="gyromouse" />

    <Button
        android:id="@+id/steeringwheels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mouseb"
        android:layout_toLeftOf="@+id/gyromouse"
        android:onClick="onClick"
        android:text="joystick" />

</RelativeLayout>